# Avanza Python Backend Environment
# Copy to .env and fill in your credentials

# Avanza Credentials
AVANZA_USERNAME=your_avanza_username
AVANZA_PASSWORD=your_avanza_password

# TOTP Secret (32-character Base32 string)
# Get this from Avanza: Profile > Settings > Two-factor auth > "Other app" > "Can't scan QR?"
AVANZA_TOTP_SECRET=YOUR_32_CHAR_BASE32_SECRET_HERE

# Session + reliability tuning
AVANZA_SESSION_TIMEOUT=600
AVANZA_MAX_AUTH_FAILURES=3
AVANZA_CIRCUIT_BREAKER_SECONDS=120
